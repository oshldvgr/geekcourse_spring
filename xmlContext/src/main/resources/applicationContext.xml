<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">


    <bean id="ball_1" class="Ball">
        <property name="color" value="RED"/>
        <property name="size" value="SMALL"/>
    </bean>

    <bean id="ball_2" class="Ball">
        <property name="color" value="GOLD"/>
        <property name="size" value="MEDIUM"/>
    </bean>

    <bean id="bulb_1" class="Bulb">
        <property name="color" value="BLUE"/>
        <property name="size" value="SMALL"/>
    </bean>

    <bean id="tree_1" class="Christmastree">
        <property name="decorations">
            <list>
                <ref bean="ball_1"/>
                <ref bean="ball_2"/>
                <ref bean="bulb_1"/>
            </list>
        </property>
    </bean>

    <bean id="tree_2" class="Christmastree">
        <property name="decorations">
            <list>
                <ref bean="ball_2"/>
                <ref bean="bulb_1"/>
            </list>
        </property>

    </bean>


</beans>